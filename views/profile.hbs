            });

            cancelExperienceButton.addEventListener('click', function () {
                addExperienceForm.classList.add('form-hidden');
                addExperienceButton.classList.remove('d-none');
            });


            const presentCheckbox = document.getElementById('present');
            const endDateInput = document.getElementById('endDate');

            presentCheckbox.addEventListener('change', function (e) {
                let ifPresent = e.target.checked;
                if (ifPresent) {
                    endDateInput.style.display = 'none'; // Hide the end date input
                } else {
                    endDateInput.style.display = 'block'; // Show the end date input
                }
            });

        });
    </script>
