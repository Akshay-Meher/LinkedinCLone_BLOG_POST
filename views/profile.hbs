                        <label for="startDate">Start Date*</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" required>
                    </div>
                    <div class="form-group m-2">

                        <input type="checkbox" name="present" id="present">
                        <span class="fs-6">currently working here</span>
                    </div>
                    <div class="form-group" id="endDate">
                        <label for="endDate">End Date</label>
                        <input type="date" class="form-control" id="endDate" name="endDate">
                    </div>
                    <button type="submit" class="btn btn-primary m-2">Add Experience</button>
                    <button type="button" class="m-2 btn  btn-secondary" id="cancelExperienceButton">Cancel</button>
