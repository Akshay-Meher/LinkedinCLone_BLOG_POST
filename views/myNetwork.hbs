    <script>
        async function handleAccept(connectedUserId) {

            try {

                const response = await fetch(`http://localhost:3000/user/connection/accept/${connectedUserId}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                // Parse the JSON from the response
                const data = await response.json();

                // Log the parsed data
                alert(data.message);
                location.reload();

            } catch (error) {
                console.error('There was a problem with the fetch operation:', error);
                console.log('Failed to send connection request.');
            }
        }


        async function handleReject(connectedUserId) {

            try {

                const response = await fetch(`http://localhost:3000/user/connection/reject/${connectedUserId}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                console.log(response);
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                // Parse the JSON from the response
                const data = await response.json();

                // Log the parsed data
                alert(data.message);
                location.reload();

            } catch (error) {
                console.error('There was a problem with the fetch operation:', error);
                console.log('Failed to send connection request.', error);
            }
        }

        async function handleConnect(userId) {
            try {
                // Send the request with the userId properly included in the URL
                const response = await fetch(`http://localhost:3000/user/connection/send/${userId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });


                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }

                // Parse the JSON from the response
                const data = await response.json();

                // Log the parsed data
                alert(data.message);

                console.log('Connection request sent successfully!');
            } catch (error) {
                console.error('There was a problem with the fetch operation:', error);
                console.log('Failed to send connection request.');
            }
        }


    </script>

