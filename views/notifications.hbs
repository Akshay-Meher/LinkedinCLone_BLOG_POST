                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#"
                            id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://mdbootstrap.com/img/Photos/Avatars/img%20(9).jpg" class="rounded-circle"
                                height="30" alt="Profile" />
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="/profile">My profile</a></li>
                            <li><a class="dropdown-item" href="/logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container container1 mt-5 pt-5">

        {{!-- Check if there are posts --}}

        <div class="container mt-4">
            {{#if notifications.length}}
            {{#each notifications}}
            <div class="alert alert-info d-flex align-items-center position-relative" role="alert">

                <a href="/notification/close/{{id}}" class="btn-close position-absolute top-0 end-0 m-2"
                    aria-label="Close"></a>

                <img src="{{sender.profileImage}}" alt="{{sender.name}}" class="rounded-circle me-3"
                    style="width: 40px; height: 40px;">
                <div class="d-flex flex-column">

                    {{#if (isEqualLike type 'like') }}
                    <p>
                        <strong class="me-2">{{sender.name}}</strong>Liked your post..
                    </p>
                    <p class="mb-0">{{content}}</p>
                    <small class="text-muted">{{ formatDate createdAt}}</small>
                    {{/if}}

                    {{#if (isEqual type 'comment') }}
                    <p>
                        <strong class="me-2">{{sender.name}}</strong>commented on you post..
                    </p>
                    <p class="mb-0">{{content}}</p>
                    <small class="text-muted">{{ formatDate createdAt}}</small>
                    {{/if}}

                    {{#if (isEqual type 'post') }}
                    <p>
                        <strong class="me-2">{{sender.name}}</strong>created a new post.
                    </p>
                    <p class="mb-0">{{content}}</p>
                    <small class="text-muted">{{ formatDate createdAt}}</small>
                    {{/if}}

                    {{#if (isEqualConnection type 'connection') }}
                    <p>
                        <strong class="me-2">{{sender.name}}</strong>send connection request
                    </p>
                    <p class="mb-0">{{content}}</p>
                    <small class="text-muted">{{ formatDate createdAt}}</small>
                    {{/if}}

                    {{#if (isEqualMessage type 'message') }}
                    <p>
                        message from <strong class="me-2">{{sender.name}}</strong>
                    </p>
                    <p class="mb-0">{{content}}</p>
                    <small class="text-muted">{{ formatDate createdAt}}</small>
                    {{/if}}



                </div>
            </div>
            {{/each}}
            {{else}}
            <div class="container mt-4">
                <p> Notificaitons not available.</p>
            </div>
            {{/if}}

        </div>

    </div>
    </div>

